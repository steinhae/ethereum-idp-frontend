<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:background="#C0C0C0"
        android:orientation="vertical"
        tools:context="de.tum.repairchain.MainActivity">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="560dp"
            android:gravity="center_horizontal"
            android:id="@+id/layout_top"
            android:focusableInTouchMode="false"
            android:focusable="false"
            android:paddingTop="25dp">

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:id="@+id/top_box_start">

            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:id="@+id/imageView4"
                    android:src="@drawable/repairchain"
                    android:layout_marginBottom="20dp" />

        </LinearLayout>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:id="@+id/imageView12"
                android:src="@drawable/divider_line" />
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp">

            <LinearLayout android:layout_width="wrap_content"
                          android:orientation="vertical"
                          android:layout_weight=".5"
                          android:layout_height="wrap_content">
                <ImageButton
                        android:id="@+id/btn_report"
                        android:layout_height="90dp"
                        android:src="@drawable/placeholder"
                        android:background="@android:color/transparent"
                        android:scaleType="fitCenter"
                        android:layout_width="wrap_content" android:layout_gravity="center_horizontal"/>
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="3dp"
                        android:textColor="@android:color/white"
                        android:text="@string/btn_add_report_text"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:gravity="center_horizontal"/>
            </LinearLayout>


            <LinearLayout android:layout_width="wrap_content"
                          android:orientation="vertical"
                          android:layout_weight=".5"
                          android:layout_height="wrap_content">
                <ImageButton
                        android:id="@+id/btn_balance"
                        android:src="@drawable/map"
                        android:background="@android:color/transparent"
                        android:scaleType="fitCenter"
                        android:layout_width="wrap_content"
                        android:layout_height="90dp" android:layout_gravity="center_horizontal"/>
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="3dp"
                        android:textColor="@android:color/white"
                        android:text="@string/btn_reports_text"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:gravity="center_horizontal"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp" android:visibility="gone">

            <ImageButton
                    android:id="@+id/connect_garageio_button"
                    android:src="@drawable/map"
                    android:background="#FFFFFF"
                    android:scaleType="fitCenter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5"
                    android:padding="0dp" />

            <ImageButton
                    android:id="@+id/connect_august_button"
                    android:src="@drawable/map"
                    android:background="#FFFFFF"
                    android:scaleType="fitCenter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5"
                    android:padding="0dp"/>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>
